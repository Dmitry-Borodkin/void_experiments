#!/usr/bin/env -S ASAN_OPTIONS=detect_leaks=0 voidc
//---------------------------------------------------------------------
{ v_import("mainline.void"); }
{ v_enable_mainline(); }
//---------------------------------------------------------------------
{
    v_import("llvm-c/Support.void");

    v_import("cstdio.void");
}

//---------------------------------------------------------------------
//- <locale.h>
//---------------------------------------------------------------------
{
    setlocale: (int, *const char) ~> *char;

    LC_ALL = 6;         //- Sic!

    setlocale(LC_ALL, "C.UTF-8");
}

//---------------------------------------------------------------------
//- <ncurses.h>
//---------------------------------------------------------------------
{
    ok = LLVMLoadLibraryPermanently("libncursesw.so.6");     //- ?

    printf("ok: %d\n", ok);
}

initscr: () ~> void;

printw: (*const char, ...) ~> int;
refresh: () ~> void;
getch: () ~> int;
endwin: () ~> void;

struct WINDOW;

stdscr: &*WINDOW;

getmaxx: (*WINDOW) ~> int;
getmaxy: (*WINDOW) ~> int;


//---------------------------------------------------------------------
{
    initscr();
    printw("Превед!");

    printw(" (%d, %d)", getmaxx(stdscr), getmaxy(stdscr));

    refresh();
    getch();
    endwin();
}

