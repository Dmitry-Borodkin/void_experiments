//---------------------------------------------------------------------
Transform_is_affine_ref: (t: &Transform) -> bool
{
    if (!t.norm())  v_return(false);

    t = t[0];

    v_return( abs(t[6]) <= EPSILON  &&
              abs(t[7]) <= EPSILON  &&
              abs(t[8]) >  EPSILON );
}

Transform_is_affine: (t: Transform) -> bool
{
    t = t.norm();

    t = t[0];

    v_return( abs(t[6]) <= EPSILON  &&
              abs(t[7]) <= EPSILON  &&
              abs(t[8]) >  EPSILON );
}

