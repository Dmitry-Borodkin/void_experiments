Transform_is_regular_ref: (t: &Transform) -> bool
{
    if (!t.norm())  v_return(false);

    v_return( abs(t.det()) > EPSILON );
}

Transform_is_regular: (t: Transform) -> bool
{
    t = t.norm();

    v_return( abs(t.det()) > EPSILON );
}

