Point_op_infix_add: (p: Point, v: Vector) -> Point
{
    v_return({ p.x + p.w*v.x, p.y + p.w*v.y, p.w });
}

Point_op_infix_sub: (a: Point, b: Point) -> Vector
{
    v_return({ a.x/a.w - b.x/b.w, a.y/a.w - b.y/b.w });
}

