Vector_dot: (a: Vector, b: Vector) -> double
{
    v_return( a.x*b.x + a.y*b.y );
}

Vector_crs: (a: Vector, b: Vector) -> double
{
    v_return( a.x*b.y - a.y*b.x );
}

Vector_is_fininite: (a: Vector) -> bool
{
    v_return( is_finite(a.x)  &&  is_finite(a.y) );
}

